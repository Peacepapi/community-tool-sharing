# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /register                   controllers.Application.onSignUpClick()
POST    /register                   controllers.Application.register()
POST    /login                      controllers.Application.login()
GET     /logout                     controllers.Application.logout()
GET     /browse                     controllers.Tools.index()

GET     /tools                      controllers.Tools.ownedTools()
GET     /tools/:user_id             controllers.Tools.getToolByUserId(user_id: Long)
POST    /tools                      controllers.Tools.create()
#POST    /tools/:id,requestCode      controllers.Tools.borrowOrDelete(id: Long, requestCode: Int)
#PUT     /tools/:id                  controllers.Tools.borrow(id: Long)
#POST    /tools/:id/borrow           controllers.Tools.borrow(id: Long)
DELETE  /tools/:id                  controllers.Tools.delete(id: Long)
POST    /tools/:id                  controllers.Tools.delete(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
